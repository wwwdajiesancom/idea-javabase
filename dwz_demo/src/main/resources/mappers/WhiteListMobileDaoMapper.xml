<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.loujie.www.dwz.dao.WhiteListMobileDao">

    <!-- 1.定义的ResultMap -->

    <!-- 2.定义表名称 -->
    <sql id="table">white_list_mobile</sql>
    <sql id="tables">white_list_mobile a</sql>

    <!-- 3.需要查询的字段及添加、排序 -->
    <sql id="column">
        a.`id`,
        a.`mobile`,
        a.`name`,
        a.`remark`,
        a.`created_at`,
        a.`updated_at`
    </sql>

    <!-- 3.2查询条件 -->
    <sql id="where">
        <if test="id != null">
            and a.id = #{id}
        </if>
    </sql>

    <!-- 3.3排序 -->
    <sql id="order">
        <choose>
            <when test="Eorder != null and Eorder != ''">
                order by ${Eorder}
            </when>
            <otherwise>
                order by a.id DESC
            </otherwise>
        </choose>
    </sql>

    <!-- 4.查询模块 -->
    <select id="get" resultType="WhiteListMobile" parameterType="java.util.Map">
        select
            <include refid="column"/>
        from
            <include refid="tables" />
        where 1 = 1
            <include refid="where"/>
    </select>

    <!-- 5.插入模块 -->

    <!-- 6.更新模块 -->

    <!-- 7.删除模块 -->
</mapper>